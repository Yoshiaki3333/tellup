<!DOCTYPE html>
<html>
  <head>
    <title>Tellup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg" style="background-color:#0297E0;" >
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if user_signed_in? %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-item nav-link active",:style=>"color:#fff;"  %>
            <%= link_to 'リスト一覧へ', root_path, class: "nav-item nav-link active",:style=>"color:#fff;"   %>
            <%= link_to 'リストを作成', new_list_path, class: "nav-item nav-link active",:style=>"color:#fff;"    %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "post", class: "nav-item nav-link active",:style=>"color:#fff;"   %>
            <%= link_to "新規登録", new_user_registration_path, class: "post", class: "nav-item nav-link active",:style=>"color:#fff;"   %>
          <% end %>
        </div>
      </div>
    </nav>
    </header>
    <%= yield %>
  </body>
</html>
